/* compsys302 2016 - group30
 * Background
 * Image object to load in a image to be displayed as a background for each screen
 */

package imageObjects;

import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.FileInputStream;
import java.net.URL;

import javax.imageio.ImageIO;

import main.GameWindow;

public class Background {
	private BufferedImage image;
	private URL url;
	
	public Background(String s, GameWindow mc) { // load in background
		try {
			url = mc.getDocumentBase();
			image = mc.getImage(url, s);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	public void draw(Graphics2D g) { // draw background
		g.drawImage(image, 0, 0, null);
	}

}
